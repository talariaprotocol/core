    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/eslint": "^8",
    "@types/mocha": "^10.0.7",
    "@types/prettier": "latest",
    "@types/qrcode": "^1",
    "@types/snarkjs": "^0",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.6",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "ethers": "^6.13.2",
    "hardhat": "^2.19.4",
