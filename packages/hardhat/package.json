{
  "name": "@talaria/contracts",
  "version": "0.0.1",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "chain": "hardhat node --network hardhat --no-deploy",
    "compile": "hardhat compile",
    "deploy:testnet": "hardhat deploy --network arbitrumSepolia && hardhat deploy --network polygonAmoy",
    "deploy:mainnet": "hardhat deploy --network arbitrum && hardhat deploy --network polygon",
    "set:lz:peers": "hardhat run deploy-helpers/connect-layer-zero-peers.ts",
    "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
    "generate": "hardhat run scripts/generateAccount.ts",
    "flatten": "hardhat flatten",
    "lint": "yarn eslint && yarn prettier:check",
    "eslint": "eslint --ext .js --ignore-path .gitignore .",
    "prettier:check": "prettier --check . --config .prettierrc",
    "prettier:fix": "prettier --write . --config .prettierrc",
    "format": "prettier --write ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
    "test": "REPORT_GAS=true hardhat test --network hardhat",
    "verify": "hardhat etherscan-verify",
    "hardhat-verify": "hardhat verify"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
